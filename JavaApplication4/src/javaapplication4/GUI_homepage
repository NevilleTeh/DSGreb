    private void systemDashboardButtonActionPerformed(java.awt.event.ActionEvent evt) {                                                      
        new GUI_dashboard().setVisible(true);
    }                                                     

    private void refreshButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        DateTimeFormatter dtf = DateTimeFormatter.ofPattern("HH:mm:ss");  
        LocalDateTime current = LocalDateTime.now(); 
        showTime.setText(dtf.format(current));
    }                                             

    private void showTimeAncestorAdded(javax.swing.event.AncestorEvent evt) {                                       
        DateTimeFormatter dtf = DateTimeFormatter.ofPattern("HH:mm:ss");  
        LocalDateTime current = LocalDateTime.now(); 
        showTime.setText(dtf.format(current));
    }                                      

    private void customerViewButtonActionPerformed(java.awt.event.ActionEvent evt) {                                                   
        new GUI_customerview().setVisible(true);
    }                                                  

    private void addDriverButtonActionPerformed(java.awt.event.ActionEvent evt) {                                                
        new GUI_addRemoveDriver().setVisible(true);
    }                                               

