    private void refreshButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        DateTimeFormatter dtf = DateTimeFormatter.ofPattern("HH:mm:ss");  
        LocalDateTime current = LocalDateTime.now(); 
        jLabel4.setText(dtf.format(current)+")");
        jLabel6.setText(dtf.format(current)+"");
        jLabel9.setText(dtf.format(current)+")");
    }                                             

    private void jLabel4AncestorAdded(javax.swing.event.AncestorEvent evt) {                                      
        DateTimeFormatter dtf = DateTimeFormatter.ofPattern("HH:mm:ss");  
        LocalDateTime current = LocalDateTime.now(); 
        jLabel4.setText(dtf.format(current)+")");
    }                                     

    private void jLabel6AncestorAdded(javax.swing.event.AncestorEvent evt) {                                      
        DateTimeFormatter dtf = DateTimeFormatter.ofPattern("HH:mm:ss");  
        LocalDateTime current = LocalDateTime.now(); 
        jLabel6.setText(dtf.format(current)+"");
    }                                     

    private void jLabel9AncestorAdded(javax.swing.event.AncestorEvent evt) {                                      
        DateTimeFormatter dtf = DateTimeFormatter.ofPattern("HH:mm:ss");  
        LocalDateTime current = LocalDateTime.now(); 
        jLabel9.setText(dtf.format(current)+")");
    }                                     

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.toBack();
        setVisible(false);
        new GUI_homepage().toFront();
        new GUI_homepage().setState(java.awt.Frame.NORMAL);
    }                                        

